# USB Token Server Docker Environment Configuration
# ================================================
# Optimized for Odoo ERP Integration

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# CORS Configuration - Allow all origins for fresh setup
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/usb-token-server.log

# USB Token Configuration
USB_TOKEN_TIMEOUT=30000
MAX_CONCURRENT_OPERATIONS=5
PKCS11_MODULE=/usr/lib/opensc-pkcs11.so

# Redis Cache Configuration (Optional)
REDIS_HOST=redis-cache
REDIS_PORT=6379
REDIS_PASSWORD=eta_redis_pass
CACHE_ENABLED=true
CACHE_TTL=3600

# Security Configuration
RATE_LIMIT_WINDOW=900000# 15 minutes
RATE_LIMIT_MAX=100# Max requests per window
API_KEY_REQUIRED=false# Set to true for production

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
